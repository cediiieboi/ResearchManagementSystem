@model IEnumerable<ResearchManagementSystem.Models.RankHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.College)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FacultyEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.College)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacultyId.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacultyEmail.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.rankName">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.rankName">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.rankName">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

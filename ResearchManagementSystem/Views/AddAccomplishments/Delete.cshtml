@model ResearchManagementSystem.Models.AddAccomplishment

@{
    ViewData["Title"] = "Delete";
}
<link href="~/css/ClusterCoordinator-Accomplishmentdetails.css" rel="stylesheet" />
<style>

    .table-responsive {
        overflow-x: auto;
    }

    .sticky-action-column {
        position: sticky;
        right: 0;
        background-color: white;
        z-index: 1;
